.PaypalInfo {
	display: none;
	position: absolute;
	font-size: 14px;
	width: 280px;
	box-shadow: 0 1px 5px #ddebf8;
	background: #f9fcff;
	border: 1px solid #cae4fc;
	border-radius: 5px;
	padding: 12px;
	margin-top: -25px;
}

.PaypalInfo p {
	margin: 0;
	margin-top: 20px;
}

.PaypalInfo p:first-child {
	margin-top: 0;
}

.PaypalInfo.active {
	display: block;
}